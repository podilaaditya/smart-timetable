<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/com.ajouroid.timetable"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#ffffff" >

        <com.ajouroid.timetable.TimeTable
            android:id="@+id/timetable"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        
        <com.ajouroid.timetable.widget.Panel
            android:id="@+id/topPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            panel:animationDuration="800"
            panel:content="@+id/panelContent"
            panel:handle="@+id/panelHandle"
            panel:linearFlying="true"
            android:paddingBottom="4dip"
            panel:position="top" >

            <Button
                android:id="@id/panelHandle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawer_button"
                android:gravity="left"
                android:text="â–¼ Subjects List"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@id/panelContent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#505050"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                <ListView
                    android:id="@+id/subjectList"
                    android:layout_width="fill_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dp"
                    android:cacheColorHint="#00000000" />

                <Button
                    android:id="@+id/btn_addSubject"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:background="@drawable/stroke_button"
                    android:text="@string/addNewSubject" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                <ListView
                    android:id="@+id/taskList"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dp"
                    android:cacheColorHint="#00000000" />
                
                </LinearLayout>
            </LinearLayout>
        </com.ajouroid.timetable.widget.Panel>
    </FrameLayout>

    <com.cauly.android.ad.AdView
        xmlns:app="http://schemas.android.com/apk/res/com.ajouroid.timetable"
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        app:adtype="CPC"
        app:age="20"
        app:allowcall="yes"
        app:appcode="CAULY"
        app:dynamicReloadInterval="true"
        app:effect="none"
        app:gender="all"
        app:gps="off"
        app:reloadInterval="30" />

</LinearLayout>